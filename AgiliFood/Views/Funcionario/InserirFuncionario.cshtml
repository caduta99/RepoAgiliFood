@model AgiliFood.Models.tb_funcionario

@{
    ViewBag.Title = "InserirFuncionario";
}

<h2>Cadastrar Funcionário</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nome_funcionario, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Nome")
            <div class="col-md-10">
                @Html.EditorFor(model => model.nome_funcionario, new { htmlAttributes = new { @class = "form-control" , @maxlength= "50" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.login_funcionario, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Login")
            <div class="col-md-10">
                @Html.EditorFor(model => model.login_funcionario, new { htmlAttributes = new { @class = "form-control", @maxlength = "10" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.senha_funcionario, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Senha")
            <div class="col-md-10">
                @Html.EditorFor(model => model.senha_funcionario, new { htmlAttributes = new { @class = "form-control", @maxlength = "10" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </div>
        <center>
            @Html.ValidationMessage("Error", new { @class = "text-danger" })
            @Html.ValidationMessage("Success", new { @class = "text-success" })
        </center>
    </div>
}
    <div>
        @Html.ActionLink("Lista de Funcionários", "ConsultarFuncionario", "Funcionario")
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
