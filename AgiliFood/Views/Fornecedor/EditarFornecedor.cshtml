@model AgiliFood.Models.tb_fornecedor

@{
    ViewBag.Title = "EditarFornecedor";
}

<h2>Editar Fornecedor</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id_fornecedor)

    <div class="form-group">
        @Html.LabelFor(model => model.nome_fornecedor, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Fornecedor")
        <div class="col-md-10">
            @Html.EditorFor(model => model.nome_fornecedor, new { htmlAttributes = new { @class = "form-control" , @maxlength = "50" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.status_fornecedor, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Ativo")
        <div class="col-md-10">
            @Html.EditorFor(model => model.status_fornecedor)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar" class="btn btn-default" />
        </div>
    </div>
    <center>
        @Html.ValidationMessage("Success", new { @class = "text-success" })
        @Html.ValidationMessage("Error", new { @class = "text-danger" })
    </center>
</div>
}

<div>
    @Html.ActionLink("Lista de Fornecedores", "ConsultarFornecedor", "Fornecedor")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
