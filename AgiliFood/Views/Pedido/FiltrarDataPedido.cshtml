@model AgiliFood.Models.tb_pedido

@{
    ViewBag.Title = "FiltrarDataPedido";
}

<h2>Filtrar Data do Pedido</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.date_pedido, "Data Inicial", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("txtDataInicial", "",new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.date_pedido, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.date_pedido, "Data Final", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("txtDataFinal","" ,new { htmlAttributes = new { @class = "form-control" , @type="date"} })
            @Html.ValidationMessageFor(model => model.date_pedido, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input value="Pesquisar" type="submit" class="btn btn-default">
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Consultar Pedidos de Funcionários", "ConsultarFuncionarioPedido", "Pedido")
</div>
